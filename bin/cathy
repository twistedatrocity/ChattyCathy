#!/usr/bin/env python

import sys, getopt

from cathy.cathy import ChattyCathy

#args = docopt(__doc__)
import sys, getopt

def main(argv):
   channel = ''
   token = ''
   rname = False
   ft = False
   fc = False
   help = """
   Cathy.

   Discord chat bot using AIML artificial intelligence

   Usage:
    cathy -c <channel> -t <token> -r

   Options:
	-c <channel>	Name of channel to chat in (required)
	-t <token>	Bot's Discord API token (required)
	-r 		Respond only when bot name mentioned (optional)
	-h --help     Show this screen.
	"""
   try:
      opts, args = getopt.getopt(argv,"rc:t:",["channel=","token="])
   except getopt.GetoptError:
      print (help)
      sys.exit(2)
   for opt, arg in opts:
      if opt == '-r':
         rname = True
      elif opt in ("-c", "--channel"):
         channel = arg
         fc = True
      elif opt in ("-t", "--token"):
         token = arg
         ft = True

   if fc != True or ft != True:
      print(help)
      sys.exit(2)

   bot = ChattyCathy(channel, token, rname)
   bot.run()

if __name__ == "__main__":
   main(sys.argv[1:])
